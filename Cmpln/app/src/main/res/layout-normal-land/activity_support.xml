<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/support_list_container"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/supportHeader"
        android:divider="@android:color/darker_gray">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/backView"
            android:src="@drawable/backindicator"
            android:onClick="GoToMenu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:typeface="sans"
            android:text="Back"
            android:padding="10dp"
            android:textColor="#9933cc"
            android:id="@+id/support_text1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:typeface="sans"
            android:text="Support"
            android:layout_marginLeft="180dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#9933cc"
            android:id="@+id/support_text2"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/support_list"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>
</LinearLayout>
